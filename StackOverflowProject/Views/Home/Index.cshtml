@model List<StackOverflowProject.ViewModels.QuestionViewModel>
@{ 
    ViewBag.Title = "Home";
}

<div class="row">
    <div class="col-sm-12">
        <div class="mt-4 p-5 bg-light text-dark rounded">
            <h1>Learn, Share, Build</h1>
            <h3>Each month, over 50 million come to Stack Overflow to learn, share their Knowledge, and build their careers.</h3>
            <p class="lead">Join the world's largest developer community'</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <table class="table">
            @foreach(var item in Model)
            {
                Html.RenderPartial("Question", item);
            }
        </table>
        @if (Session["CurrentUserName"] != null) 
        { 
            <a href="/question/create" class="btn btn-primary">Add Question</a>
        }
    </div>
</div>

<script>
    $("a[href='/home/index']").attr("id", "active");
</script>